extends layout

block content
  section.section-auth
    .auth-card
      h2.section-title Join CYRUS
      if errorMessage
        p.alert.alert-error= errorMessage

      form(method="post", action="/register")
        .form-group
          label(for="name") Full Name *
          input#name(type="text", name="name", required, value=(formData && formData.name) || "")
        .form-group
          label(for="email") Email *
          input#email(type="email", name="email", required, value=(formData && formData.email) || "")
        .form-group
          label(for="handle") Handle *
          input#handle(type="text", name="handle", required, placeholder="@pixel_sam", value=(formData && formData.handle) || "")
        .form-group
          label(for="bio") Short Bio
          textarea#bio(name="bio", rows="2")= (formData && formData.bio) || ""
        .form-flex
          .form-group
            label(for="password") Password *
            input#password(type="password", name="password", required)
          .form-group
            label(for="confirmPassword") Confirm Password *
            input#confirmPassword(type="password", name="confirmPassword", required)

        button.btn-primary.btn-full(type="submit") Create Account

      p.auth-switch
        | Already have an account?
        a(href="/login") Login here
