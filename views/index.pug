doctype html
html(lang="en" data-theme="dark")
  head
    meta(charset="UTF-8")
    title CYRUS â€“ Collaborative Art Board
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style.
      :root {
        --transition-fast: 0.25s ease;
        --transition-med: 0.45s ease;

        /* Typography */
        --font-display: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        --font-body: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;

        /* Spacing */
        --radius-lg: 18px;
        --radius-pill: 999px;
        --shadow-soft: 0 18px 40px rgba(0, 0, 0, 0.35);
      }

      /* Dark theme */
      :root[data-theme="dark"] {
        --bg-body: radial-gradient(circle at top, #1e293b 0, #020617 45%, #020617 100%);
        --bg-elevated: rgba(15, 23, 42, 0.96);
        --bg-soft: rgba(15, 23, 42, 0.9);
        --border-subtle: rgba(148, 163, 184, 0.35);

        --fg-main: #e5e7eb;
        --fg-muted: #9ca3af;

        --accent-1: #f97316;
        --accent-2: #ec4899;
        --accent-3: #22d3ee;
        --accent-soft: rgba(56, 189, 248, 0.06);
      }

      /* Light theme */
      :root[data-theme="light"] {
        --bg-body: radial-gradient(circle at top, #fefce8 0, #f3f4f6 40%, #e5e7eb 100%);
        --bg-elevated: rgba(255, 255, 255, 0.96);
        --bg-soft: rgba(249, 250, 251, 0.96);
        --border-subtle: rgba(148, 163, 184, 0.35);

        --fg-main: #111827;
        --fg-muted: #6b7280;

        --accent-1: #ea580c;
        --accent-2: #db2777;
        --accent-3: #0ea5e9;
        --accent-soft: rgba(14, 165, 233, 0.08);
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html, body {
        height: 100%;
      }

      body {
        font-family: var(--font-body);
        background: var(--bg-body);
        color: var(--fg-main);
        -webkit-font-smoothing: antialiased;
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      img {
        max-width: 100%;
        display: block;
      }

      .page {
        max-width: 1120px;
        margin: 0 auto;
        padding: 20px 18px 60px;
      }

      /* Animated background halo behind hero */
      .page::before {
        content: "";
        position: fixed;
        inset: auto auto 10% 50%;
        width: 380px;
        height: 380px;
        transform: translateX(-50%);
        background:
          radial-gradient(circle at 10% 0, rgba(236,72,153,0.5), transparent 60%),
          radial-gradient(circle at 90% 20%, rgba(14,165,233,0.45), transparent 55%);
        opacity: 0.7;
        filter: blur(18px);
        pointer-events: none;
        z-index: -1;
        animation: halo-shift 14s ease-in-out infinite alternate;
      }

      @keyframes halo-shift {
        0% { transform: translate(-50%, 0) scale(1); opacity: 0.75; }
        50% { transform: translate(-45%, -4%) scale(1.05); opacity: 0.9; }
        100% { transform: translate(-55%, 3%) scale(0.97); opacity: 0.7; }
      }

      /* Header */

      .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
        margin-bottom: 24px;
        position: sticky;
        top: 8px;
        z-index: 10;
        backdrop-filter: blur(18px);
        background: linear-gradient(
          120deg,
          rgba(15,23,42,0.86),
          rgba(15,23,42,0.7),
          rgba(15,23,42,0.86)
        );
        border-radius: var(--radius-pill);
        border: 1px solid rgba(148,163,184,0.25);
        box-shadow: 0 16px 30px rgba(0,0,0,0.3);
        padding: 8px 14px 8px 10px;
      }

      :root[data-theme="light"] .header {
        background: linear-gradient(
          120deg,
          rgba(255,255,255,0.9),
          rgba(249,250,251,0.95),
          rgba(255,255,255,0.9)
        );
        box-shadow: 0 12px 24px rgba(148,163,184,0.4);
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 10px;
        white-space: nowrap;
      }

      .brand-badge {
        width: 32px;
        height: 32px;
        border-radius: 11px;
        background: conic-gradient(
          from 120deg,
          var(--accent-1),
          var(--accent-2),
          var(--accent-3),
          var(--accent-1)
        );
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        font-weight: 700;
        color: #fff;
        box-shadow: 0 0 0 1px rgba(15, 23, 42, 0.55),
                    0 12px 30px rgba(0,0,0,0.55);
        animation: spin-slow 18s linear infinite;
      }

      :root[data-theme="light"] .brand-badge {
        box-shadow: 0 0 0 1px rgba(255,255,255,0.7),
                    0 12px 24px rgba(148,163,184,0.6);
      }

      @keyframes spin-slow {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }

      .brand-text-title {
        font-size: 15px;
        font-weight: 600;
        letter-spacing: 0.04em;
        text-transform: uppercase;
      }

      .brand-text-sub {
        font-size: 11px;
        color: var(--fg-muted);
      }

      .nav-pills {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 2px;
        border-radius: var(--radius-pill);
        background: rgba(15,23,42,0.6);
      }

      :root[data-theme="light"] .nav-pills {
        background: rgba(243,244,246,0.95);
        border: 1px solid rgba(209,213,219,0.9);
      }

      .nav-pill {
        font-size: 12px;
        padding: 5px 10px;
        border-radius: var(--radius-pill);
        color: var(--fg-muted);
        cursor: pointer;
        transition: background var(--transition-fast), color var(--transition-fast), transform var(--transition-fast);
      }

      .nav-pill:hover {
        transform: translateY(-1px);
      }

      .nav-pill.active {
        background: rgba(15,23,42,0.92);
        color: #f9fafb;
      }

      :root[data-theme="light"] .nav-pill.active {
        background: #111827;
        color: #f9fafb;
      }

      .header-actions {
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .pill-soft {
        font-size: 11px;
        padding: 4px 10px;
        border-radius: var(--radius-pill);
        background: var(--accent-soft);
        border: 1px solid rgba(148,163,184,0.45);
        color: var(--fg-muted);
        display: flex;
        align-items: center;
        gap: 4px;
      }

      .pill-soft-dot {
        width: 6px;
        height: 6px;
        border-radius: 999px;
        background: var(--accent-3);
        box-shadow: 0 0 0 4px rgba(34,211,238,0.35);
      }

      .theme-toggle {
        width: 34px;
        height: 34px;
        border-radius: 999px;
        border: 1px solid rgba(148,163,184,0.6);
        background: var(--bg-soft);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        transition: transform var(--transition-fast), box-shadow var(--transition-fast), border var(--transition-fast), background var(--transition-fast);
      }

      .theme-toggle:hover {
        transform: translateY(-1px) scale(1.02);
        box-shadow: 0 10px 22px rgba(0,0,0,0.35);
      }

      .theme-toggle-icon {
        position: absolute;
        font-size: 16px;
        transition: transform 0.4s ease, opacity 0.4s ease;
      }

      .theme-toggle-icon.sun {
        transform: translateY(0);
        opacity: 1;
      }

      .theme-toggle-icon.moon {
        transform: translateY(200%);
        opacity: 0;
      }

      :root[data-theme="light"] .theme-toggle-icon.sun {
        transform: translateY(-200%);
        opacity: 0;
      }
      :root[data-theme="light"] .theme-toggle-icon.moon {
        transform: translateY(0);
        opacity: 1;
      }

      /* Hero */

      .hero {
        display: grid;
        grid-template-columns: minmax(0, 1.3fr) minmax(0, 1fr);
        gap: 26px;
        margin-top: 26px;
        margin-bottom: 30px;
      }

      @media (max-width: 840px) {
        .hero {
          grid-template-columns: minmax(0, 1fr);
        }
      }

      .hero-main {
        padding: 20px 18px 20px;
        border-radius: 22px;
        background: linear-gradient(
          145deg,
          rgba(15,23,42,0.95),
          rgba(15,23,42,0.86),
          rgba(15,23,42,0.95)
        );
        border: 1px solid rgba(148,163,184,0.6);
        box-shadow: var(--shadow-soft);
        position: relative;
        overflow: hidden;
      }

      :root[data-theme="light"] .hero-main {
        background: linear-gradient(
          145deg,
          rgba(255,255,255,0.96),
          rgba(249,250,251,0.98),
          rgba(255,255,255,0.96)
        );
        box-shadow: 0 22px 45px rgba(148,163,184,0.6);
      }

      .hero-main::before {
        content: "";
        position: absolute;
        inset: -20%;
        background:
          radial-gradient(circle at 0 100%, rgba(234,88,12,0.25), transparent 60%),
          radial-gradient(circle at 100% 0, rgba(236,72,153,0.28), transparent 55%),
          radial-gradient(circle at 60% 60%, rgba(56,189,248,0.25), transparent 55%);
        opacity: 0.9;
        mix-blend-mode: screen;
        pointer-events: none;
        animation: hero-shift 22s ease-in-out infinite alternate;
      }

      @keyframes hero-shift {
        0% { transform: translate3d(-3%, 2%, 0) scale(1); }
        50% { transform: translate3d(0, -2%, 0) scale(1.03); }
        100% { transform: translate3d(2%, 1%, 0) scale(1.01); }
      }

      .hero-main-inner {
        position: relative;
        z-index: 1;
      }

      .hero-kicker {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 10px;
        border-radius: var(--radius-pill);
        background: rgba(15,23,42,0.7);
        color: var(--fg-muted);
        font-size: 11px;
        border: 1px solid rgba(148,163,184,0.6);
        margin-bottom: 10px;
      }

      :root[data-theme="light"] .hero-kicker {
        background: rgba(255,255,255,0.9);
      }

      .hero-kicker-dot {
        width: 7px;
        height: 7px;
        border-radius: 999px;
        background: var(--accent-2);
        box-shadow: 0 0 0 4px rgba(236,72,153,0.4);
      }

      .hero-title {
        font-size: clamp(2.1rem, 3.1vw, 2.7rem);
        letter-spacing: 0.02em;
        font-weight: 700;
        line-height: 1.1;
        margin-bottom: 6px;
      }

      .hero-title span.highlight {
        background: linear-gradient(120deg, var(--accent-3), var(--accent-2));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        text-shadow: 0 10px 35px rgba(0,0,0,0.4);
      }

      .hero-subtitle {
        font-size: 0.96rem;
        color: var(--fg-muted);
        max-width: 440px;
        margin-bottom: 18px;
      }

      .hero-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        margin-bottom: 16px;
        font-size: 11px;
      }

      .hero-tag {
        padding: 4px 9px;
        border-radius: var(--radius-pill);
        border: 1px solid rgba(148,163,184,0.5);
        background: rgba(15,23,42,0.7);
        color: var(--fg-muted);
        backdrop-filter: blur(6px);
      }

      :root[data-theme="light"] .hero-tag {
        background: rgba(255,255,255,0.96);
      }

      .hero-actions-row {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        align-items: center;
        margin-bottom: 8px;
      }

      .btn-primary {
        border-radius: var(--radius-pill);
        border: none;
        padding: 9px 16px;
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
        background-image: linear-gradient(120deg, var(--accent-1), var(--accent-2));
        color: #f9fafb;
        box-shadow: 0 16px 40px rgba(0,0,0,0.55);
        display: inline-flex;
        align-items: center;
        gap: 7px;
        transition: transform var(--transition-fast), box-shadow var(--transition-fast), filter var(--transition-fast);
      }

      .btn-primary:hover {
        transform: translateY(-1px) scale(1.02);
        box-shadow: 0 18px 46px rgba(0,0,0,0.6);
        filter: saturate(1.1);
      }

      .btn-ghost {
        border-radius: var(--radius-pill);
        border: 1px solid rgba(148,163,184,0.6);
        padding: 8px 14px;
        font-size: 13px;
        font-weight: 500;
        cursor: pointer;
        background: rgba(15,23,42,0.75);
        color: var(--fg-muted);
        display: inline-flex;
        align-items: center;
        gap: 7px;
        transition: background var(--transition-fast), color var(--transition-fast), transform var(--transition-fast), box-shadow var(--transition-fast);
      }

      :root[data-theme="light"] .btn-ghost {
        background: rgba(249,250,251,0.96);
      }

      .btn-ghost:hover {
        transform: translateY(-1px);
        box-shadow: 0 14px 30px rgba(0,0,0,0.35);
      }

      .hero-meta {
        font-size: 11px;
        color: var(--fg-muted);
      }

      .hero-meta span {
        opacity: 0.9;
      }

      .hero-meta span + span::before {
        content: "â€¢";
        margin: 0 6px;
        opacity: 0.6;
      }

      .hero-side {
        position: relative;
        border-radius: 22px;
        background: var(--bg-elevated);
        border: 1px solid rgba(148,163,184,0.5);
        padding: 14px 14px 16px;
        box-shadow: var(--shadow-soft);
        overflow: hidden;
      }

      .hero-side-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 14px;
        font-size: 11px;
        color: var(--fg-muted);
      }

      .hero-side-chip {
        padding: 3px 8px;
        border-radius: var(--radius-pill);
        border: 1px solid rgba(148,163,184,0.6);
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background: rgba(15,23,42,0.85);
      }

      :root[data-theme="light"] .hero-side-chip {
        background: rgba(255,255,255,0.96);
      }

      .hero-side-chip-badge {
        width: 8px;
        height: 8px;
        border-radius: 999px;
        background: var(--accent-3);
        box-shadow: 0 0 0 4px rgba(34,211,238,0.4);
      }

      .hero-grid {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 8px;
      }

      .hero-tile {
        position: relative;
        border-radius: 14px;
        overflow: hidden;
        height: 86px;
        background: radial-gradient(circle at 0 0, rgba(248,250,252,0.15), rgba(15,23,42,1));
        border: 1px solid rgba(30,64,175,0.6);
        cursor: pointer;
        transition: transform var(--transition-fast), box-shadow var(--transition-fast), border-color var(--transition-fast), filter var(--transition-fast);
      }

      :root[data-theme="light"] .hero-tile {
        background: radial-gradient(circle at 0 0, rgba(15,23,42,0.1), #f9fafb);
      }

      .hero-tile:nth-child(2) {
        height: 96px;
      }

      .hero-tile:nth-child(3) {
        height: 72px;
      }

      .hero-tile:hover {
        transform: translateY(-3px);
        box-shadow: 0 18px 40px rgba(15,23,42,0.75);
        border-color: var(--accent-3);
        filter: saturate(1.15);
      }

      .hero-tile-ink {
        position: absolute;
        inset: 0;
        background:
          radial-gradient(circle at 15% 10%, rgba(249,115,22,0.55), transparent 52%),
          radial-gradient(circle at 85% 80%, rgba(236,72,153,0.55), transparent 55%),
          radial-gradient(circle at 70% 0, rgba(34,211,238,0.4), transparent 52%);
        mix-blend-mode: screen;
        opacity: 0.9;
        transform-origin: center center;
        animation: tile-flow 16s ease-in-out infinite alternate;
      }

      @keyframes tile-flow {
        0% { transform: scale(1.2) translate3d(-3%, 3%, 0); }
        50% { transform: scale(1.25) translate3d(2%, 0, 0); }
        100% { transform: scale(1.3) translate3d(-1%, -3%, 0); }
      }

      .hero-tile-label {
        position: absolute;
        inset: auto 8px 8px 8px;
        font-size: 10px;
        color: #f9fafb;
        text-shadow: 0 0 12px rgba(15,23,42,0.85);
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .hero-tile-label span strong {
        font-size: 11px;
      }

      /* Sections layout */

      .sections {
        display: grid;
        grid-template-columns: minmax(0, 1.5fr) minmax(0, 1fr);
        gap: 22px;
        align-items: flex-start;
      }

      @media (max-width: 900px) {
        .sections {
          grid-template-columns: minmax(0, 1fr);
        }
      }

      /* Gallery / work cards */

      .section-card {
        background: var(--bg-elevated);
        border-radius: 22px;
        border: 1px solid var(--border-subtle);
        padding: 16px 16px 18px;
        box-shadow: var(--shadow-soft);
      }

      :root[data-theme="light"] .section-card {
        background: var(--bg-elevated);
        box-shadow: 0 18px 38px rgba(148,163,184,0.6);
      }

      .section-title-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 10px;
      }

      .section-title {
        font-size: 15px;
        font-weight: 600;
        letter-spacing: 0.08em;
        text-transform: uppercase;
      }

      .section-sub {
        font-size: 11px;
        color: var(--fg-muted);
      }

      .pill-outline {
        font-size: 11px;
        padding: 3px 8px;
        border-radius: var(--radius-pill);
        border: 1px dashed rgba(148,163,184,0.7);
        color: var(--fg-muted);
      }

      .grid-art {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 12px;
        margin-top: 10px;
      }

      .art-card {
        position: relative;
        border-radius: 18px;
        overflow: hidden;
        background: radial-gradient(circle at 0 0, rgba(15,23,42,0.9), #020617);
        border: 1px solid rgba(51,65,85,0.9);
        cursor: pointer;
        transition: transform var(--transition-fast), box-shadow var(--transition-fast), border-color var(--transition-fast), filter var(--transition-fast);
      }

      :root[data-theme="light"] .art-card {
        background: radial-gradient(circle at 0 0, rgba(15,23,42,0.05), #f9fafb);
      }

      .art-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 48px rgba(15,23,42,0.85);
        border-color: var(--accent-2);
        filter: saturate(1.15);
      }

      .art-swatch {
        height: 120px;
        background:
          linear-gradient(115deg, #020617 0, rgba(15,23,42,0.9) 25%, rgba(15,23,42,0.9) 100%),
          radial-gradient(circle at 15% 0, rgba(14,165,233,0.55), transparent 55%),
          radial-gradient(circle at 80% 90%, rgba(236,72,153,0.5), transparent 55%),
          radial-gradient(circle at 110% 20%, rgba(250,204,21,0.35), transparent 55%);
        background-blend-mode: screen, normal;
      }

      .art-body {
        padding: 9px 10px 10px;
        font-size: 12px;
      }

      .art-title-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 3px;
      }

      .art-title {
        font-weight: 600;
        font-size: 12px;
      }

      .art-tag-dot {
        width: 9px;
        height: 9px;
        border-radius: 999px;
        background: var(--accent-3);
        box-shadow: 0 0 0 4px rgba(34,211,238,0.35);
      }

      .art-meta {
        font-size: 11px;
        color: var(--fg-muted);
      }

      .art-meta span + span::before {
        content: "â€¢";
        margin: 0 4px;
        opacity: 0.6;
      }

      /* About / Info column */

      .stack {
        display: flex;
        flex-direction: column;
        gap: 16px;
      }

      .about-card {
        border-radius: 20px;
        background: var(--bg-elevated);
        border: 1px solid var(--border-subtle);
        padding: 12px 14px 14px;
        box-shadow: var(--shadow-soft);
        font-size: 13px;
      }

      :root[data-theme="light"] .about-card {
        box-shadow: 0 16px 30px rgba(148,163,184,0.6);
      }

      .about-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 8px;
      }

      .about-avatar {
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .avatar-circle {
        width: 38px;
        height: 38px;
        border-radius: 999px;
        background:
          radial-gradient(circle at 10% 0, var(--accent-3), transparent 60%),
          radial-gradient(circle at 90% 100%, var(--accent-2), transparent 60%);
        border: 1px solid rgba(15,23,42,0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        font-weight: 700;
        color: #f9fafb;
      }

      :root[data-theme="light"] .avatar-circle {
        border-color: rgba(255,255,255,0.9);
      }

      .avatar-meta {
        display: flex;
        flex-direction: column;
        gap: 2px;
      }

      .avatar-name {
        font-size: 13px;
        font-weight: 600;
      }

      .avatar-role {
        font-size: 11px;
        color: var(--fg-muted);
      }

      .about-body {
        font-size: 12px;
        color: var(--fg-muted);
        line-height: 1.5;
      }

      .about-body strong {
        color: var(--fg-main);
        font-weight: 500;
      }

      .chips-row {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        margin-top: 10px;
      }

      .chip {
        font-size: 11px;
        padding: 3px 8px;
        border-radius: var(--radius-pill);
